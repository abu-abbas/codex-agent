{
  "$schema": "https://raw.githubusercontent.com/laravel/pint/main/pint.schema.json",
  "preset": "laravel",
  "rules": {
    "binary_operator_spaces": {
      "operators": {
        "=>": "align_single_space_minimal"
      }
    },
    "ordered_imports": {
      "sort_algorithm": "alpha"
    }
  }
}
